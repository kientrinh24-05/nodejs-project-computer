<div class="ps-page--default" style="padding: 150px 0 150px">
  <div class="container">
    <div class="ps-page__content">
      <div class="ps-tab-root">
        <form class="ps-form--auth" action="/dang-nhap" method="post">
          <ul class="ps-tab-list">
            <li class="active"><a href="#tab-1">Đăng nhập</a></li>
            <li><a href="#tab-2">Đăng ký</a></li>
          </ul>
          <div class="ps-tabs">
            <div class="ps-tab active" id="tab-1">
              <form action="/dang-nhap" method="POST">
                <div class="form-group">
                  <input class="form-control" type="text" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                  <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group submit">
                  <button class="ps-btn ps-btn--fullwidth ps-btn--black">Login</button>
                </div>
                 <input type="hidden" name="urlBack">
              </form>
              <p>Connect with
              <ul class="ps-list--social">
                <li><a class="google-plus" href="/auth/google"><i class="fa fa-google-plus"></i></a></li>
              </ul>
              </p>
            </div>
            <div class="ps-tab" id="tab-2">
              <form action="/dang-ky" method="POST">
                <div class="form-group">
                  <input class="form-control" type="text" name="username" placeholder="Username">
                </div>
                <div class="form-group">
                  <input class="form-control" type="text" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                  <input class="form-control" type="password" name="password" placeholder="Password">
                </div>
                <div class="form-group submit">
                  <button class="ps-btn ps-btn--fullwidth ps-btn--black">Register</button>
                </div>
              </form>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script>
        

            <% if (errorValidate) { %>
              const err = '<%= errorValidate %>';
              $.notify("<%= errorValidate %>", 'danger');
            <%}%>
            
            <% if (successAlert) { %>
              const err = '<%= successAlert %>';
              $.notify("<%= successAlert %>", 'success');
            <%}%>

</script>